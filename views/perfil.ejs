                        <% } %>
                    </div>
                </div>
                <div class="col-md-9">
                    <h2><%=usuario.nome_completo %> - <a href="#!" data-toggle="modal" data-target="#editPerfil"><i class="fas fa-user-edit"></i></a></h2>
                    <p>
                        <%=usuario.descricao_bio%>
                    </p>
                </div>

            </div>
        </div>
        <div class="row row-status">
            <div class="col-md-6">
                <div id="preferencias">
                    <p>Preferencias</p>

                </div>
            </div>
            <div class="col-md-3">
                <div id='prod-servicos'>
                    <p>Produtos e Servi√ßos</p>

