<script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-auto-replace-svg="nest"></script>

<!-- Jquary e script para scroll nav suave-->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="./javascripts/my-scroll.js"></script>
<script src="./javascripts/nav-color.js"></script>
<script src="./javascripts/side-menu.js"></script>
<script src="./javascripts/updateUsuario.js"></script>
<script src="./javascripts/servicosGerais.js"></script>

<script src="./javascripts/migrarUsuario"></script>

</body>
</html>